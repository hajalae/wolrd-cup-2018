        <br><br><br>
        <div class="text-center">
            <body class="p-3">
            <h1 class="display-4"><strong><%= team.name %></strong></h1>
            <h4><small>Classement FIFA: <%= team.fifaRanking %> </small></h4>
            </div>
    <div class="container p-4">
          
        <div class="row">
            <div class="col">
                <h2 class="m-2"><strong><em>Passé en coupe du monde</strong></em></h2>
          <h1 class="mt-3 mb-0" ><%= team.worldCupPastParticipation %><small class="text-muted">/<%= team.worldCupPast %></small></h1>
              <h4><small class="text-muted">PHASES FINALES / CAMPAGNES QUALIFICATIVES</small><h4>
              <h4><small class="text-muted ">MEILLEUR RESULTAT:</small><strong> <%= team.bestResult %></strong></td>  </h4>                        
              </div>

              <div class="col">           
              <h4>
                  <table class="table">
                      <tbody>
                        <tr> </tr>
                        <tr>
                          <td>PREMIER TOUR</td>
                          <td><strong><%= team.firstRound %></strong><small class="text-muted"> APPARITIONS</small></td>                          
                        </tr>  
                        <tr>
                          <td>DEMI-FINALES</td>
                          <td><strong><%= team.semiFinals %></strong><small class="text-muted"> APPARITIONS</small></td>                         
                        </tr>
                        <tr>
                          <td>FINALS</td>
                          <td><strong><%= team.finals %></strong><small class="text-muted"> APPARITIONS</small></td>                          
                        </tr>
                        <tr>
                          <td>TITRES</td>
                          <td><strong><%= team.titles %></strong><small class="text-muted"> TITRE</small></td>                          
                        </tr>
                      </tbody>
                    </table>
                </div>
          </div> </div>
          
      
    <div class="text-center" id="myGroup">     
             <div class=p-4>
              <button class="btn btn-primary" data-toggle="collapse" data-target="#multiCollapseExample1" data-parent="#myGroup">Le sélectionneur</button>
              <button class="btn btn-primary" data-toggle="collapse" data-target="#multiCollapseExample2" data-parent="#myGroup">Composition de l'équipe</button>
              <button class="btn btn-primary" data-toggle="collapse" data-target="#multiCollapseExample3" data-parent="#myGroup">Les matchs de poule</button>
             </div>

      <div class="accordion-group">

          <div class="collapse " id="multiCollapseExample1" data-parent="#myGroup">
            <div class="card card-body">
                <div class="card card-body">
                  <div class="container">
                    <div class="row">
                         <div class="col">
                            <h1><p class="text-danger m-3 mr-3"><%= team.coachName %></p></h1>
                            <img src="../public/images/teams/<%= team.urlName %>/<%= team.coachImg %>"  class="rounded" alt="Responsive image">
                         </div>
                        <div class="col p-5 vertical-center">   
                          <p>
                            <%= team.coachDescription %>
                          </p>
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
        
        
          <div class="collapse" id="multiCollapseExample2" data-parent="#myGroup">
            <div class="card card-body">
              <table class="table vertical-center style=float:none; ">
                <thead>
                  <tr>
                    <th scope="col" colspan="4">GARDIENS</th>
                 </tr>
                </thead>
                <tbody>
                  <tr>
                      <% for(var i=0; i<team.team.goalKeepers.length; i++){ %>
                          <td><%= team.team.goalKeepers[i] %></td>
                        <% } %>
                  </tr>
                  <thead>
                      <tr>
                        <th scope="col" colspan="4">DEFENSEURS</th>
                      </tr>
                    </thead>
                    <tr>
                        <% for(var i=1; i<=team.team.defenders.length; i++){ 
                          if(i%4 === 1){%>
                            <tr>
                              <td><%= team.team.defenders[i-1] %></td>
                          <% } else{ %>
                              <td><%= team.team.defenders[i-1] %></td>
                          <% } if(i%4 === 0){ %>
                            </tr>
                          <% }} %>
                    </tr>
                  <thead>
                      <tr>
                        <th scope="col" colspan="4">MILIEUX</th>
                      </tr>
                    </thead>
                    <tr>
                        <% for(var i=1; i<=team.team.midfieldrs.length; i++){ 
                          if(i%4 === 1){%>
                            <tr>
                              <td><%= team.team.midfieldrs[i-1] %></td>
                          <% } else{ %>
                              <td><%= team.team.midfieldrs[i-1] %></td>
                          <% } if(i%4 === 0){ %>
                            </tr>
                          <% }} %>
                    </tr>
                  <thead>
                      <tr>
                        <th scope="col" colspan="4">ATTAQUANTS</th>
                      </tr>
                    </thead>
                    <tr>
                        <% for(var i=1; i<=team.team.forwards.length; i++){ 
                          if(i%4 === 1){%>
                            <tr>
                              <td><%= team.team.forwards[i-1] %></td>
                          <% } else{ %>
                              <td><%= team.team.forwards[i-1] %></td>
                          <% } if(i%4 === 0){ %>
                            </tr>
                          <% }} %>
                    </tr>
                </tbody>
              </table>
            </div>
            </div>
          
          
          <div class="collapse" id="multiCollapseExample3" data-parent="#myGroup">
            <div class="card card-body">
                <table class="table table-sm">
                   <tbody>
                      <tr>
                        <% for(var i = 0; i<countryGames.length ; i++){ %>
                        <td><small class="text-muted"> <%var date = new Date(countryGames[i].date);%> <%= date.getDate() %> juin 2018 Groupe <%= countryGames[i].group%></small></td>
                        <%} %>
                      </tr>
                      <tr>
                          <% for(var i = 0; i<countryGames.length ; i++){ 
                            var homeTeam = teams.teams[countryGames[i].homeTeamId];
                            var awayTeam = teams.teams[countryGames[i].awayTeamId];%>
                            <td>
                              <strong><%= homeTeam.name %> - <%= awayTeam.name %></strong>
                              <p>
                                  <% if(countryGames[i].result.goalsHomeTeam == null) { %>
                                    <%= date.getHours() %> : 00
                                  <% }else{ %>
                                    <%= countryGames[i].result.goalsHomeTeam %> - <%= countryGames[i].result.goalsAwayTeam %>
                                  <% } %>
                              </p>
                            </td>
                          <%} %>
                          </tr>
                     </tbody>
                  </table>
      
              </div>
            </div>
      </div>
    </div>
              
      <div class="p-3" class="text-center">
        <img src="../public/images/teams/<%= team.urlName %>/<%= team.teamImg %>"  class="img-fluid"  alt="Max-width 400px" alt="Responsive image"/>
      </div>
 
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
  </body>
</html>

